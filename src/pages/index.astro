---
// Server Only
const name = 'Pedro Alejandro Ramirez';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>{name}</h1>

		<p>Welcome to Astro! - the time is {new Date().toLocaleTimeString()}</p>

		<footer>

		</footer>

		<script>
			const currentYear: number = new Date().getFullYear();

			const footer = document.querySelector('footer') as HTMLElement;
			footer.innerHTML = `currentYear: ${currentYear}`;
		</script>
	</body>
</html>
