---
import NavBar from "../components/NavBar.astro";

// Server Only
const name = 'Pedro Alejandro Ramirez';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<NavBar />
		<br />
		<h1>{name}</h1>

		<p>Welcome to Astro! - the time is {new Date().toLocaleTimeString()}</p>
		<p class="current-time"></p>

		<footer>

		</footer>

		<script>
			// Client Only

			const footer = document.querySelector('footer') as HTMLElement;
			const currentTimeElement = document.querySelector('.current-time') as HTMLElement;

			const currentYear: number = new Date().getFullYear();
			const currentTime: string = new Date().toLocaleTimeString();

			footer.innerHTML = `currentYear: ${currentYear}`;
			currentTimeElement.innerHTML = `Current Time: ${currentTime}`;
		</script>
	</body>
</html>
