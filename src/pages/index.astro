---
import MyTempleLayout from "../layouts/MyTempleLayout.astro";
---

<MyTempleLayout title="Home" description="Welcome to Home!">
	<p>The time is {new Date().toLocaleTimeString()}</p>
	<p class="current-time"></p>

	<footer>

	</footer>

	<script>
		// Client Only

		const footer = document.querySelector('footer') as HTMLElement;
		const currentTimeElement = document.querySelector('.current-time') as HTMLElement;

		const currentYear: number = new Date().getFullYear();
		const currentTime: string = new Date().toLocaleTimeString();

		footer.innerHTML = `currentYear: ${currentYear}`;
		currentTimeElement.innerHTML = `Current Time: ${currentTime}`;
	</script>
</MyTempleLayout>